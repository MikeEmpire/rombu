<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><strong>Add Video</strong></h3>
			</div>
			<div class="panel-body">
				<form action="" method="POST" role="form">
					<div class="form-group">
						<label for="">Name</label>
						<input type="text" class="form-control" id="videoName" placeholder="">
					</div>
					<div class="form-group">
						<label for="">Company</label>
						<input type="text" class="form-control" id="videoCompany" placeholder="">
					</div>
					<div class="form-group">
						<label for="">URL</label>
						<input type="text" class="form-control" id="videoURL" placeholder="">
					</div>
					<div class="form-group">
						<label for="">Description</label>
						<input type="text" class="form-control" id="videoDescription" placeholder="">
					</div>
					<div class="form-group">
						<label for="">Featured</label>
						<select class="form-control" id="videoFeatured">
					    <option value="false">No</option>
					    <option value="true">Yes</option>
						</select>
					</div>

				</form>
				<br>
				<div class="text-right">
					<button type="submit" class="btn btn-primary btn-md" id="add-btn">Add Video</button>
				</div>
			</div>
		</div>
	</div>			
</div>